
@{
    ViewBag.Title = "ShoppingCart";
}

<h2>Shopping Cart</h2>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th> </th>
    </tr>
    @foreach (var item in ViewBag.ShoppingCart)
    {
        <tr>
            <td>@item.ItemName</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td><a href="/Home/DeleteItemFromCart?ItemName=@item.ItemName">Delete from Cart</a></td>
        </tr>
    }
</table>

@Html.ActionLink("Keep Shopping", "ItemsIndex", "Home")

